# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-realtime-preview-2024-10-01

# GitHub Configuration
GITHUB_TOKEN=ghp-your-github-token-here
GITHUB_REPOSITORY_OWNER=your-username
GITHUB_REPOSITORY_NAME=your-repo

# MCP Configuration
MCP_SERVER_URL=http://localhost:3000
MCP_PROTOCOL_VERSION=2024-11-05

# Application Configuration
LOG_LEVEL=info
ENVIRONMENT=development

# Audio Configuration
AUDIO_SAMPLE_RATE=24000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE_MS=100

# Network Configuration
HTTP_TIMEOUT_SECONDS=30
WEBSOCKET_RECONNECT_ATTEMPTS=3
WEBSOCKET_RECONNECT_DELAY_MS=1000

# Feature Flags (true/false)
ENABLE_VOICE_ACTIVITY_DETECTION=true
ENABLE_ECHO_CANCELLATION=true
ENABLE_NOISE_SUPPRESSION=true
ENABLE_AUTO_GAIN_CONTROL=true

# Development Settings
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=false
MOCK_MCP_RESPONSES=false
